<Window x:Class="PumaKatari.Screens.DataFill.Datos_Ruta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PumaKatari.Screens.DataFill"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Icon="/Screens/DataFill/log.png"
        Title="Datos_Ruta" Height="500" Width="340">
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/Screens/DataFill/bgData.png"
                        AlignmentX="Center"
                        AlignmentY="Center"
                        Stretch="Fill"/>
        </Border.Background>

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="200" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="DATOS RUTA"
                           Foreground="#282525"
                           HorizontalAlignment="Left"
                           FontSize="25"
                           FontFamily="Square721 BT"
                           FontWeight="Bold" >
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Orientation="Vertical">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10">
                    <TextBlock  Text="Nombre Ruta : " 
                                FontFamily="Square721 BT"
                                Margin="5,0"
                                />

                    <TextBox x:Name="txtNombreRuta"
                             Width="150" Height="20" 
                             Margin="5,0"
                             FontFamily="Square721 BT"
                             Background="Transparent"
                             Foreground="Black"
                             CaretBrush="Gray"
                             BorderBrush="#1C1D24"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Center" 
                     />
                </StackPanel>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,10">
                    <TextBlock  Text="Tarifa : " 
                                FontFamily="Square721 BT"
                                Margin="5,0"/>
                    <TextBox x:Name="txtTarifa"
                             Margin="5,0"
                             Text="1.80"
                             Width="150" Height="20" 
                             FontFamily="Square721 BT"
                             Background="Transparent"
                             Foreground="Black"
                             CaretBrush="Gray"
                             BorderBrush="#1C1D24"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Center" 
                     />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10">
                    <TextBlock  Text="Nro. Paradas : " 
                                FontFamily="Square721 BT"
                                Margin="5,0" />
                    <TextBox x:Name="txtNroParadas"
                             Margin="5,0"
                             Width="150" Height="20" 
                             FontFamily="Square721 BT"
                             Background="Transparent"
                             Foreground="Black"
                             CaretBrush="Gray"
                             BorderBrush="#1C1D24"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Center"
                     />
                </StackPanel>
               
            </StackPanel>

            <StackPanel Grid.Row="2"
                        VerticalAlignment="Center">
                <Button x:Name="btnAgregar" 
                        Content="A G R E G A R"
                        Margin="0,10"                    
                        Height="40" Width="160" 
                        Foreground="White"
                        FontFamily="Square721 BT"
                        FontWeight="Bold"
                        FontSize="12"
                        Cursor="Hand"                    
                        Click="btnAgregar_Click" 
                    >
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#282525"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#f9b573"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="20"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="5"
                                          Direction="315"
                                          Opacity="0.4"
                                          Color="Black"
                        />
                    </Button.Effect>
                </Button>

                <Button x:Name="btnCancel" 
                        Content="C A N C E L A R"  
                        Margin="0,10"
                        Height="40" Width="160" 
                        Foreground="White"
                        FontFamily="Square721 BT"
                        FontWeight="Bold"
                        FontSize="12"
                        Cursor="Hand"
                        Click="btnCancel_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#282525"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#f9b573"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="20"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="5"
                                          Direction="315"
                                          Opacity="0.4"
                                          Color="Black"
                        />
                    </Button.Effect>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</Window>
